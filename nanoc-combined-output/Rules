#!/usr/bin/env ruby

compile '/stylesheets/' do
  filter :concat, items: item.children
end

compile '*' do
end

route '/stylesheets/' do
  item.identifier + 'whole.css'
end

route '*' do
  if item[:extension]
    item.identifier.chop + '.' + item[:extension]
  else
    item.identifier.chop
  end
end
